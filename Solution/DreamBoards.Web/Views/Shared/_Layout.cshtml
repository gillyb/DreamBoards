<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
	<link href="@Url.Content("~/static/css/site.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/static/css/ui-lightness/jquery-ui-1.8.21.custom.css")" rel="stylesheet" type="text/css"/>
	<script src="@Url.Content("~/static/js/jquery-1.7.2.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/static/js/jquery-ui-1.8.21.custom.min.js")" type="text/javascript"></script>
</head>

<body class="CanvasBorder">
    @RenderBody()
	
	<p style="color:gray">
		Current page: @Request.Url <br/>
		Referer: @Request.UrlReferrer <br/>
		Canvas size: <span id="window-size"></span>
	</p>
	
<script>
	$(function() {
		$('#window-size').html($(window).width() + ' x ' + $(window).height());
	});
</script>
</body>
</html>
